<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the page you want to delete:"
        android:textSize="20dp"
        android:padding="5pt"
        android:textColor="#000000"
        />
    <RadioGroup
        android:id="@+id/pageRadioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/first1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"
            />
        <RadioButton
            android:id="@+id/second1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"/>
        <RadioButton
            android:id="@+id/third1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"/>
        <RadioButton
            android:id="@+id/fourth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"/>
        <RadioButton
            android:id="@+id/fifth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"/>
        <RadioButton
            android:id="@+id/sixth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty"/>

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deletePageEnter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/deletePageCancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="@color/colorAccent"
            />
        />

    </LinearLayout>

</LinearLayout>