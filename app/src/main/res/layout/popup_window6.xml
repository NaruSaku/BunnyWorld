<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Properties: "
    android:textSize="22dp"
    android:padding="5pt"
    android:textColor="#000000"
    />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left:"
        android:padding="5pt"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/showX1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text = ""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right:"
        android:padding="5pt"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/showX2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom:"
        android:padding="5pt"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/showY1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top:"
        android:padding="5pt"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/showY2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The name of the current shape"
        android:padding="5pt"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/showCurrentPageName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        />

</LinearLayout>


<Switch
    android:id="@+id/movable_switch"
    android:padding="5pt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="true"
    android:text="Movable: "
    android:textOn="On"
    android:textOff="Off"
    android:showText="true" />

<Switch
    android:id="@+id/hidden_switch"
    android:padding="5pt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="true"
    android:text="Hidden: "
    android:textOn="On"
    android:textOff="Off"
    android:showText="true" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/changeProperty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/cancelProperty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

</LinearLayout>



</LinearLayout>

